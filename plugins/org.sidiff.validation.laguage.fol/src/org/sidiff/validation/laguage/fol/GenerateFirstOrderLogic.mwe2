module org.sidiff.validation.laguage.fol.GenerateFirstOrderLogic

import org.eclipse.xtext.xtext.generator.*
import org.eclipse.xtext.xtext.generator.model.project.*

var rootPath = ".."

Workflow {
	
	component = XtextGenerator {
		configuration = {
			project = StandardProjectConfig {
				baseName = "org.sidiff.validation.laguage.fol"
				rootPath = rootPath
				runtimeTest = {
					enabled = true
				}
				eclipsePlugin = {
					enabled = true
				}
				eclipsePluginTest = {
					enabled = true
				}
				createEclipseMetaData = true
			}
			code = {
				encoding = "UTF-8"
				fileHeader = "/*\n * generated by Xtext \${version}\n */"
			}
		}
		language = StandardLanguage {
			name = "org.sidiff.validation.laguage.fol.FirstOrderLogic"
			fileExtensions = "fol"
			
			// formatter API
			fragment = formatting.Formatter2Fragment2 auto-inject {}
			
			// provides a preference page for template proposals
			fragment = ui.templates.CodetemplatesGeneratorFragment2 auto-inject {}

			serializer = {
				generateStub = false
			}
			validator = {
				// composedCheck = "org.eclipse.xtext.validation.NamesAreUniqueValidator"
			}
			projectWizard = {
		        generate = true
		        pluginProject = true
		    }
		}
	}
}
